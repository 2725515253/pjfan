<view><view class="{{[status]}}" id="bg"></view><view id="tempContainer"><block wx:for="{{tempFoods}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="tempItem" style="{{('top:'+item.top+';left:'+item.left+';font-size:'+item.fontSize+';color:'+item.color)}}" data-id="{{item.id}}" data-event-opts="{{[['animationend',[['handleAnimationEnd',['$event']]]]]}}" bindanimationend="__e">{{''+item.food+''}}</view></block></view><view id="outer"><view style="{{('margin-top:'+navbarHeight)}}" id="inner"><view class="{{[status+' '+(restaurants.length?'restaurants':'')]}}" id="main"><text class="tip">点击可以切换饭点~</text><view class="title" animation="{{titleAnimationData}}" data-event-opts="{{[['tap',[['changeTime',['$event']]]]]}}" bindtap="__e">今天<text class="time">{{menu[menuIdx][0]}}</text>吃<text class="what">{{food}}</text><text class="punctuation">{{punctuation}}</text></view><view id="startBtn" data-event-opts="{{[['tap',[['play',['$event']]]]]}}" bindtap="__e"><view class="inner">{{btnText}}</view></view><view class="share"><button id="shareApp" open-type="share"><view class="inner">分享吃什么</view></button><button id="luckyMoney" data-event-opts="{{[['tap',[['getLuckyMoney',['$event']]]]]}}" bindtap="__e"><view class="inner">去领红包</view></button></view><text id="showRestaurant" data-event-opts="{{[['tap',[['showRestaurant',['$event']]]]]}}" bindtap="__e">查看餐厅详情</text></view><view class="{{[status==='running'?'hide':'']}}" id="footer"><view id="toggle"><text class="{{['option '+(type==='human'?'selected':'')]}}" data-type="human" id="human" data-event-opts="{{[['tap',[['changeType',['$event']]]]]}}" bindtap="__e">正常人类</text><text class="{{['option '+(type==='monster'?'selected':'')]}}" data-type="monster" id="monster" data-event-opts="{{[['tap',[['changeType',['$event']]]]]}}" bindtap="__e">非正常人类</text><view class="{{['hb '+type]}}"></view></view><view class="fab" id="getRestaurants" title="定位餐厅" data-event-opts="{{[['tap',[['showLocationMenu',['$event']]]]]}}" bindtap="__e"></view><view class="fab" id="editMenu" title="菜单" data-event-opts="{{[['tap',[['editMenu',['$event']]]]]}}" bindtap="__e"></view></view></view><view class="safeAreaInsetBottom"></view></view><block wx:if="{{showMenu}}"><view id="menuModal"><form data-event-opts="{{[['submit',[['handleFormSubmit',['$event']]]]]}}" style="{{('margin-top:'+navbarHeight)}}" bindsubmit="__e"><text class="title">~ 想吃什么 ~</text><textarea maxlength="1000" name="textarea" placeholder="在这里输入菜单,项目间以空格分隔,保存后会缓存到本地,再次打开会恢复初始值…" value="{{menuValue}}"></textarea><button form-type="submit">保存，再次打开恢复默认</button></form></view></block></view>